<Window x:Class="RegistrationForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="550" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="First Name" Grid.Row="0" Grid.Column="0" Margin="0,10,20,10" VerticalAlignment="Center"/>
        <TextBox Text="" Grid.Row="0" Grid.Column="1" Width="200" HorizontalAlignment="Left" Height="30"/>

        <TextBlock Text="Last Name" Grid.Row="1" Grid.Column="0" Margin="0,10,20,10" VerticalAlignment="Center"/>
        <TextBox Text="" Grid.Row="1" Grid.Column="1" Width="200" HorizontalAlignment="Left" Height="30"/>

        <TextBlock Text="Email" Grid.Row="2" Grid.Column="0" Margin="0,10,20,10" VerticalAlignment="Center"/>
        <TextBox Text="" Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" Height="30"/>

        <TextBlock Text="Username" Grid.Row="0" Grid.Column="2" Margin="50,10,20,10" VerticalAlignment="Center"/>
        <TextBox Text="" Grid.Row="0" Grid.Column="2" Width="200" HorizontalAlignment="Left" Height="30"/>

        <StackPanel Grid.Row="1" Grid.Column="2" Margin="50,10,0,10">
            <RadioButton Content="Female" IsChecked="False" Margin="0,5"/>
            <RadioButton Content="Male" IsChecked="True" Margin="0,5"/>
            <RadioButton Content="Rather not say" IsChecked="False" Margin="0,5"/>
        </StackPanel>

        <TextBlock Text="Password" Grid.Row="3" Grid.Column="0" Margin="0,20,20,10" VerticalAlignment="Center"/>
        <PasswordBox Password="" Grid.Row="3" Grid.Column="1" Width="200" HorizontalAlignment="Left" Height="30"/>
        <TextBlock Text="Must to be at least 7 characters" Grid.Row="3" Grid.Column="1" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="210,0,0,0"
                   Foreground="#FFCC00" FontSize="12"/>

        <TextBlock Text="Confirm Password" Grid.Row="4" Grid.Column="0" Margin="0,20,20,10" VerticalAlignment="Center"/>
        <PasswordBox Password="" Grid.Row="4" Grid.Column="1" Width="200" HorizontalAlignment="Left" Height="30"/>
        <TextBlock Text="Must to be at least 7 characters" Grid.Row="4" Grid.Column="1" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="210,0,0,0"
                   Foreground="#FFCC00" FontSize="12"/>

        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,30,0,0">
            <CheckBox IsChecked="True" VerticalAlignment="Center"/>
            <TextBlock Text="accept Terms of Use and Privacy Policy."
                       Margin="10,0,0,0" TextWrapping="Wrap" Width="400"/>
        </StackPanel>

        <Button Content="Register" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right"
                Width="120" Height="40" Background="#4FC3F7" Foreground="White" FontSize="16" Margin="0,20,0,0"/>
    </Grid>
</Window>